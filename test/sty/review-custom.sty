% for user-defined macro
% カスタムスタイル定義（ミニブロックPNGアイコン対応）

\usepackage{graphicx}
\usepackage{tcolorbox}
\tcbuselibrary{skins,breakable}

% アイコン付きミニブロックの再定義

% infoブロック
\renewenvironment{reviewinfo}[1][]{%
  \begin{tcolorbox}[
    enhanced,
    colback=blue!5!white,
    colframe=blue!50!black,
    title={\includegraphics[height=1em]{img/info.png}\hspace{0.5em}#1},
    fonttitle=\bfseries,
    breakable,
    arc=2mm,
    boxrule=1pt,
    left=2mm,right=2mm,top=1mm,bottom=1mm
  ]%
}{%
  \end{tcolorbox}%
}

